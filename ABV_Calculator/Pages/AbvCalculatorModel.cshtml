@page
@model ABV_Calculator.Pages.AbvCalculatorModel

<!DOCTYPE html>
<html>
<head>
    <title>ABV Calculator</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="container">
        <h1>ABV Calculator</h1>
        <form method="post">
            <div class="form-group">
                <label for="originalGravity">Original Gravity:</label>
                <input type="number" class="form-control" id="originalGravity" name="OriginalGravity" asp-for="OriginalGravity" step="0.001">
            </div>
            <div class="form-group">
                <label for="finalGravity">Final Gravity:</label>
                <input type="number" class="form-control" id="finalGravity" name="FinalGravity" asp-for="FinalGravity" step="0.001">
            </div>
            <button type="submit" class="btn btn-primary" asp-page-handler="OnPost">Calculate ABV</button>
        </form>
        @if (Model.Abv.HasValue)
        {
            <div class="mt-3">
                <h2>Results:</h2>
                <p><strong>ABV:</strong> @Model.Abv.Value.ToString("0.00")%</p>
                <p><strong>Date:</strong> @Model.DateTime.ToString("yyyy-MM-dd HH:mm:ss")</p>
            </div>
        }
          <div class="form-group">
                    <label for="abv">ABV:</label>
                    <input type="text" class="form-control" id="abv" name="abv" value="@Model.Abv?.ToString("0.00")%" readonly>
                </div>
    </div>
</body>
</html>
